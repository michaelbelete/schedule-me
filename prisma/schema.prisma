// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id  Int @default(autoincrement()) @id
  name  String
  users User[]
}

model User {
  id  Int @default(autoincrement()) @id
  fullName String @map("full_name")
  email String  @unique
  password String
  company Company?  @relation(fields: [companyId], references: [id])
  companyId Int?
  events Event[]
}

model Event {
  id  Int @default(autoincrement()) @id
  title String
  duration String
  location String
  description String
  user User @relation(fields: [userId], references: [id])
  userId Int
  attendees Attende[] 
  @@map("events")
}

model Attende {
  id  Int @default(autoincrement()) @id
  name String
  email String
  note String
  event Event @relation(fields: [eventId], references: [id])
  eventId Int
  @@map("attendees")
}